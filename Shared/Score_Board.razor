<div class="Score_Board">
<img src="/images/Rupee_Symbol.png" alt="Score Board" class="Score_Board_Image" />
<h4 class="Current_Score">@CurrentScore</h4>
</div>

@code
{
    private int _currentScore = 500; 

    [Parameter]
    public int CurrentScore
    {
        get => _currentScore;
        set => _currentScore = value;
    }
}